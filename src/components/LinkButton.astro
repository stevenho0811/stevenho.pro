---
export interface Props {
  ariaLabel?: string
  className?: string
  disabled?: boolean
  href: string
  target?: string
  title?: string
}

const {
  href,
  className,
  ariaLabel,
  title,
  disabled = false,
  target,
} = Astro.props
---

<a
  type="button"
  href={disabled ? '#' : href}
  tabindex={disabled ? '-1' : '0'}
  class={`group ${className}`}
  aria-label={ariaLabel}
  title={title}
  target={target}
  aria-disabled={disabled}
>
  <slot />
</a>

<style>
  a {
    @apply hover:text-skin-accent;
  }
</style>
